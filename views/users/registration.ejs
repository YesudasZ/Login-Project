
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<% include('../layouts/header.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <h1 class="text-center">User Registration Form</h1>

      <form action="" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Enter Name" >
        </div>
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="Enter Email" >
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="mno" placeholder="Enter Mobile Number" >
        </div>
        <div class="form-group">
          <input type="file" class="form-control-file" name="image" >
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Enter Password" >
        </div>
        <div class="form-group text-center">
          <input type="submit" class="btn btn-primary" value="Register">
        </div>
      </form>
      <%

      if(typeof message !== 'undefined' ){
        %> 
        <p style="color: green;"><%=message %></p>
     
        <%
     }
     
     %>
      <p class="text-center" style="color: green;">
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <% errors.forEach(error => { %>
            <p class="text-danger"><%= error.message %></p>
          <% }); %>
        <% } %>
        
      </p>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <a href="/login" class="btn btn-secondary mt-3">Back to Login</a>
    </div>
  </div>
</div>

<% include('../layouts/footer.ejs') %>

